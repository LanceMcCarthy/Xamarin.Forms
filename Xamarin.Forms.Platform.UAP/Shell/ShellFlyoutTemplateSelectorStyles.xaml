<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="using:Microsoft.UI.Xaml.Controls"
    >
    <DataTemplate x:Key="ShellFlyoutBaseShellItemTemplate">
        <ui:NavigationViewItem Content="{Binding Title}" Icon="{Binding FlyoutIcon, Converter={StaticResource FileImageSourcePathConverter}}" />
    </DataTemplate>
    <DataTemplate x:Key="ShellFlyoutMenuItemTemplate">
        <ui:NavigationViewItem Content="{Binding Text}" Icon="{Binding Icon, Converter={StaticResource FileImageSourcePathConverter}}" />
    </DataTemplate>
    <DataTemplate x:Key="ShellFlyoutSeperatorTemplate">
        <ui:NavigationViewItemSeparator />
    </DataTemplate>
    <DataTemplate x:Key="ShellSectionMenuItemTemplate">
        <ui:NavigationViewItem Content="{Binding Title}"/>
    </DataTemplate>
</ResourceDictionary>
